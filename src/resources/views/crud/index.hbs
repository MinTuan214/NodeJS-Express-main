<div id="main-crud">
    <div class="container">
        <div class="box-top">
            <div class="title">
                <h2>Table User</h2>
                <a href="/chatbox"><i class="fa-solid fa-comment"></i> Chat<i class="fa-solid fa-right-from-bracket"></i></a>
            </div>
            <hr class="new1">
            <div class="all-action">
                <div class="search">
                    <input type="text" placeholder="Search...">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </div>
                <div class="filter-user">
                    <div class="add"><i class="fa-solid fa-user-plus"></i> Add user</div>
                    <div class="filter">
                        <select name="users" id="">
                            <option value="1">Filter options</option>
                            <option value="1">10</option>
                            <option value="1">15</option>
                        </select>
                    </div>
                    <div class="trash"><i class="fa-solid fa-trash-can"></i> Trash</div>

                </div>
            </div>
        </div>
        <div class="box-bot">
            <table border="1">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>User Role</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Contries</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="listCrud"></tbody>
            </table>
        </div>
    </div>
</div>

<!-- modal confirm delete -->
<div class="modal-delete">
    <div class="form-confirm">
        <div class="form">
            <div class="close-modal">
                <i class="fa-solid fa-xmark"></i>
            </div>
            <div class="title-confirm">
                <i class="fa-solid fa-circle-exclamation"></i>
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="btn-confirm">
                <a class="btn yes">Yes, I'm sure</a>
                <a class="btn no">No, cancel!</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal add user -->
<div class="modal-add">
    <div class="form-add">
        <div class="form">
            <div class="close-modal">
                <i class="fa-solid fa-xmark"></i>
            </div>
            <div class="title">
                <h2>Add user</h2>
            </div>
            <hr class="new1">
            <div class="form-add-user">
                <form action="#" id="formAddUser">
                    <div class="box-text">
                        <div class="control-ip text-name">
                            <label for="#">Name</label>
                            <input type="text" name="name" id="name" placeholder="User name">
                        </div>
                        <div class="control-ip text-email">
                            <label for="#">Email</label>
                            <input type="text" name="email" id="email" placeholder="Email">
                        </div>
                        <div class="control-ip text-password">
                            <label for="#">Password</label>
                            <input type="password" name="password" id="password" placeholder="Password">
                        </div>
                        <div class="control-ip text-Confirm password">
                            <label for="#">Confirm password</label>
                            <input type="password" name="confirm-password" placeholder="Confirm password">
                        </div>
                    </div>
                    <div class="upload-avatar">
                        <div class="show-image">
                            <img src="image/notfound.png" alt="">
                            <label for="file-upload" class="custom-file-upload">
                                Upload Image
                            </label>
                            <input id="file-upload" name="avatar" type="file">
                        </div>
                    </div>
                      <div class="box-text">
                        <div class="control-ip text-name">
                            <label for="#">Phone</label>
                            <input type="text" name="phone" id="phone" placeholder="User name">
                        </div>
                        <div class="control-ip text-email">
                            <label for="#">Address</label>
                            <input type="text" name="address" id="address" placeholder="Email">
                        </div>
                        <div class="control-ip text-password">
                            <label for="#">City</label>
                            <input type="text" name="city" id="city" placeholder="Password">
                        </div>
                        <div class="control-ip text-Confirm password">
                            <label for="#">Contries</label>
                            <input type="text" name="contries" id="contries" placeholder="Confirm password">
                        </div>
                    </div>
                    <div class="role">
                        <label for="#">Assign Role:</label>
                        <div class="checkbox">
                            <input id="admin" type="checkbox">
                            <label for="admin">Administrator</label>
                            <input id="viewer" type="checkbox">
                            <label for="viewer">Viewer</label>
                        </div>
                    </div>

                    <div class="btn-add-user">
                        <a class="btn add btn-submit">+ Add new user</a>
                        <a href="#" class="btn reset">Reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="module" src="js/ajax/crud.js"></script>

